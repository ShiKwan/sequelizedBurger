
<div class="container">
    <div class="row serve-container">    
        <div class="col-md-6">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">Serving</h3>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}} {{#unless this.dataValues.devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Served</h3>
                </div>
                <div class="panel-body">
                    <ul class="list-group">
                        {{#each burgers}} {{#if this.dataValues.devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">New Order</h3>
        </div>
        <div class="panel-body">
            <form class="create-form">
                <div class="form-group has-feedback">
                <label class="control-label" for="inputGroupSuccess1">Enter a new burger order: </label>
                <div class="input-group">
                    <span class="input-group-addon"><img src="../assets/img/burger.png" alt="burger" class="burger-small-icon"></span>
                    <input id="bn" name="burger name" type="text" class="form-control" id="inputGroupSuccess1" aria-describedby="inputGroupSuccess1Status">
                </div>
                </div>

                <button id="btnCreate" type="button" class="btn btn-primary">Serve Burger</button>
            </form>
        </div>
    </div>
</div>